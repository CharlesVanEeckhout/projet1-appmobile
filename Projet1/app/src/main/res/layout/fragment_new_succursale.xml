<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewSuccursaleFragment">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="217dp"
        android:src="@drawable/ville2" />

    <EditText
        android:id="@+id/tvVille"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="sans-serif-light"
        android:hint="@string/hint_nomVille"
        android:inputType="textEmailAddress"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/tvAjoutBudget"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="sans-serif-light"
        android:hint="@string/hint_budget"
        android:inputType="phone"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvErreurValidationAjouter"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginHorizontal="16dp"
        android:layout_weight="0"
        android:background="@drawable/border"
        android:gravity="center"
        android:textColor="@color/mauve_projet1" />

    <Button
        android:id="@+id/btnAjout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/gris_bg_projet1"
        android:text="@string/btnEnregistrer"
        android:textColor="@color/bleu_projet1"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>